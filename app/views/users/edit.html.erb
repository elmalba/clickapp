<% if @current_user.id == @user.id or @current_user.role == 'admin'%>
    <div class="page-inner" ng-controller="courses">
      <div class="page-title">
        <h3><%= @user.name %></h3>
      </div>
      <div id="main-wrapper">
        <div class="row">
          <!-- Row -->
          <div class="col-lg-12 col-md-12">
            <div class="panel panel-white">
              <div class="panel-heading">
                <h4 class="panel-title">Cambiar contraseña de <%= @user.name %> <%= @user.lastname %></h4>
              </div>
              <div class="panel-body">

                <%= form_for (@user), class: "m-t-md" do |f|%>
                    <%= render 'shared/error_messages' %>

                    <!--<div class="form-group">
                      <= f.label :name, "Nombre" %><br />
                      <= f.text_field :name, autofocus: true, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <= f.label :lastname, "Apellido"%><br />
                      <= f.text_field :lastname, autofocus: true, class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <= f.label :email, "E-mail"%><br />
                      <= f.email_field :email, autofocus: true, class: "form-control" %>
                    </div> -->


                    <div class="form-group">
                      <%= f.label :password, "Nueva Contraseña" %><br />
                      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :confpassword, "Confirmar contraseña" %><br />
                      <%= f.password_field :confpassword, autocomplete: "off", class: "form-control" %>
                    </div>

                    <br />
                    <%= f.submit "Confirmar cambio", class: "btn btn-success btn-block" %>
                <%end%>


              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
    </div>
    </div><!-- Main Wrapper -->
    <div class="page-footer">
      <p class="no-s">2016 &copy; Clickapp.</p>
    </div>
    </div><!-- Page Inner -->
<%else%>
    <script type="text/javascript">
      window.location.href="/home"
    </script>
<%end%>