
<% if @current_user.role == 'admin' or @course.students.include? @current_user.id or @course.teacher == @current_user.id or @course.assistant == @current_user.id %>

<div class="page-inner" ng-controller="courses">
  <div class="page-title">
    <h3><%= @course.name %> | <%= @course.code %></h3>
  </div>
  <div id="main-wrapper">
    <div class="row">
      <!-- Row -->

      <div class="col-lg-12 col-md-12">
        <div class="panel panel-white">
          <div class="panel-heading">
            <h4 class="panel-title">Información del curso</h4>
          </div>
          <div class="panel-body">
            <% @course.users_teacher.each do |user| %>
                <p>Profesor <%= user.name %> <%= user.lastname %> - <%= mail_to user.email %>
            <% end %><br>
            <% @course.users_assistant.each do |user| %>
                Ayudante <%= user.name %> <%= user.lastname %> - <%= mail_to user.email %></p>
            <% end %>
          </div>
        </div>
      </div>


      <% if @current_user.role != 'student'%>
      <div class="col-lg-12 col-md-12">
        <div class="panel panel-white">
          <div class="panel-heading">
            <h4 class="panel-title">Alumnos solicitando acceso al curso</h4>
          </div>
          <div class="panel-body">
            <div class="table-responsive project-stats">
              <table class="table">
                <thead>
                <tr>
                  <th>Rut</th>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Email</th>
                  <th>Acción</th>
                </tr>
                </thead>
                <tbody>
                <% @course.users_request.each do |user| %>
                <tr id="request_id_-<%= user.id %>">
                  <td><%= user.rut%></td>
                  <td><%= user.name%></td>
                  <td><%= user.rut%></td>
                  <td><%= user.email%></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        Acción <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" role="menu">
                        <li><a ng-click="acceptRequest_course(course, '<%= user.id %>')">Aceptar solicitud</a></li>
                        <li><a ng-click="deleteRequest_course(course, '<%= user.id %>')">Borrar solicitud</a></li>
                      </ul>
                    </div>
                  </td>
                </tr>
                  <% end %>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <% end %>


      <div class="col-lg-12 col-md-12">
        <div class="panel panel-white">
          <div class="panel-heading">
            <h4 class="panel-title">Alumnos en el curso</h4>
          </div>
          <div class="panel-body">
            <div class="table-responsive project-stats">
              <table class="table">
                <thead>
                <tr>
                  <% if @current_user.role == 'admin' || @current_user.role == 'teacher' %>
                      <th>Rut</th>
                  <% end %>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Email</th>
                  <th>Acción</th>
                </tr>
                </thead>
                <tbody>
                <% @course.users_students.each do |user| %>
                    <tr>
                      <% if @current_user.role == 'admin' || @current_user.role == 'teacher' %>
                          <td><%= user.rut%></td>
                      <% end %>
                      <td><%= user.name%></td>
                      <td><%= user.lastname %></td>
                      <td><%= user.email%></td>
                      <td>
                        <div class="btn-group">
                          <button type="button" class="btn btn-primary btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            Acción <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <% if @current_user.role == 'admin' || @current_user.role == 'teacher' %>
                                <li><a>Ver estadísticas</a></li>
                                <li><a>Borrar alumno del curso</a></li>
                            <% end %>
                            <li><a>Enviar correo</a></li>


                          </ul>
                        </div>
                      </td>
                    </tr>
                <% end %>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>






    </div>
  </div><!-- Main Wrapper -->
  <div class="page-footer">
    <p class="no-s">2016 &copy; Clickapp.</p>
  </div>
</div><!-- Page Inner -->

<% else %>
    <script type="text/javascript">
      window.location.href="/home"
    </script>
<% end %>